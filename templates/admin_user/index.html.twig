{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <h1>User index</h1>

    <table class="table">

        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Role</th>
                <th>Date de création</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Poids</th>
                <th>Taille</th>
                <th>Genre</th>
                <th>Est vérifié</th>

                <th></th>
            </tr>
        </thead>

        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.poids }}</td>
                <td>{{ user.taille }}</td>
                <td>{{ user.genre }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <div>
        <a href="{{ path('app_admin_user_new') }}" class="btn btn-primary">Créer un nouvel utilisateur</a>
    </div>
{% endblock %}
