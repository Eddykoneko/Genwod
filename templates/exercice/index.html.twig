{% extends 'base.html.twig' %}

{% block title %}Exercice index{% endblock %}

{% block body %}
    <h1>Exercice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Description</th>
                <th>Duree</th>
                <th>Difficulte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercice in exercices %}
            <tr>
                <td>{{ exercice.createdAt ? exercice.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ exercice.type }}</td>
                <td>{{ exercice.description }}</td>
                <td>{{ exercice.duree }}</td>
                <td>{{ exercice.difficulte }}</td>
                <td>
                    <a href="{{ path('app_exercice_show', {'id': exercice.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
