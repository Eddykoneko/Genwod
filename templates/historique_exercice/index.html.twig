{% extends 'base.html.twig' %}

{% block title %}Historique des Exercices{% endblock %}

{% block body %}
    <h1>Historique des Exercices</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Date du Wod</th>
                <th>Wod</th>
                <th>Mode</th>
                <th>Type</th>
                <th>Nombre de Tours</th>
                <th>Nombre de Répétitions</th>
                <th>Temps</th>
                <th>Commentaire</th>
            </tr>
        </thead>
        <tbody>
            {% for historique in historiqueExercices %}
                <tr>
                    <td>{{ historique.exerciceId.createdAt|date('d-m-Y') }}</td>
                    <td>{{ historique.exerciceId.description }}</td>
                    <td>{{ historique.mode }}</td>
                    <td>{{ historique.exerciceId.type }}</td>
                    <td>{{ historique.nombreTours }}</td>
                    <td>{{ historique.nombreRepetition }}</td>
                    <td>{{ historique.temps|date('H:i:s') }}</td>
                    <td>{{ historique.commentaire }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun historique trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
