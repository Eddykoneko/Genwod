{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<div class="container">
    <div class="row justify-content-center">
        <h1 class="mb-3">Réinitialiser votre mot de passe</h1>
        <div class="col-md-6">
            {{ form_start(requestForm, {'attr': {'class': 'form'}}) }}
            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        &nbsp;
        &nbsp;
        &nbsp;
        <p class="col-md-6">
        Entrez votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </p>
        &nbsp;
        &nbsp;
        &nbsp;
        <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>

    </div>
</div>
    {{ form_end(requestForm) }}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
