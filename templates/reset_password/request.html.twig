{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h1 class="mb-4">Réinitialiser votre mot de passe</h1>

	{{ form_row(requestForm.email, {
        label: 'Email',
            label_attr: {
                class: 'px-4',
            }
        }) 
    }}
    
	<div class="mt-4">
		<small>
			Entrez votre addresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
		</small>
	</div>

	<button class="btn btn-primary mt-4">Réinitialiser le mot de passe</button>
	{{ form_end(requestForm) }}

	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">
			{{ message }}
		</div>
	{% endfor %}
{% endblock %}

