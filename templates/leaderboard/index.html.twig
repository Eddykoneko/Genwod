{% extends 'base.html.twig' %}

{% block title %}Leaderboard index{% endblock %}

{% block body %}
    <h1>Leaderboard index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Mode</th>
                <th>Score</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for leaderboard in leaderboards %}
            <tr>
                <td>{{ leaderboard.mode }}</td>
                <td>{{ leaderboard.score }}</td>
                <td>
                    <a href="{{ path('app_leaderboard_show', {'id': leaderboard.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
