{% extends 'base.html.twig' %}

{% block title %}Exercice index{% endblock %}

{% block body %}
    <h1>Index des Exercices</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>Duree</th>
                <th>Difficulte</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercice in exercices %}
            <tr>
                <td>{{ exercice.id }}</td>
                <td>{{ exercice.type }}</td>
                <td>{{ exercice.description }}</td>
                <td>{{ exercice.duree }}</td>
                <td>{{ exercice.difficulte }}</td>
                <td>
                    <a href="{{ path('app_admin_exercice_edit', {'id': exercice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'exercice trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_exercice_new') }}">Créer un nouvel exercice</a>
{% endblock %}
