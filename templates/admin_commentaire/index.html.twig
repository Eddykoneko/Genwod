{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}

    <h1>Index des commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date de création du WOD</th>
                <th>Exercice</th>
                <th>Email</th>
                <th>Commentaire</th>
                <th>Date du commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.exerciceId.createdAt|date('d-m-Y') }}</td>
                <td>{{ commentaire.exerciceId.description }}</td>
                <td>{{ commentaire.getUser_email }}</td>
                <td>{{ commentaire.commentaire }}</td>
                <td>{{ commentaire.createdAt ? commentaire.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de commentaire trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_commentaire_new') }}" class="btn btn-primary">Créer un commentaire</a>
{% endblock %}
