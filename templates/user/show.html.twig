{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email|default }}</td>
            </tr>
            <tr>
                <th>Date de cr√©ation</th>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ user.age }}</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ user.poids }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ user.taille }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ user.genre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_edit') }}" class="btn btn-primary">Modifier son profil</a>

    <a href="{{ path('app_home') }}" class="btn btn-primary">Retour</a>
{% endblock %}
